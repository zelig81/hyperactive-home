<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ilyag.ah91.AddActivity">

    <EditText
        android:id="@+id/etUsernameAA"
        android:hint="@string/hintUsernameAA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"/>
    <EditText
        android:id="@+id/etPasswordAA"
        android:hint="@string/hintPasswordAA"
        android:layout_below="@+id/etUsernameAA"
        android:inputType="textVisiblePassword"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bAddAA"
        android:layout_below="@+id/etPasswordAA"
        android:layout_alignParentLeft="true"
        android:text="@string/add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bReturnAA"
        android:layout_below="@+id/etPasswordAA"
        android:layout_alignParentRight="true"
        android:text="@string/tReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
